{
  "phases": {
    "setup": {
      "nixPkgs": ["nodejs_18"]
    },
    "install": {
      "cmds": [
        "if [ -f package-lock.json ]; then npm ci; else npm install; fi"
      ]
    },
    "build": {
      "cmds": [
        "npm run build"
      ]
    }
  },
  "start": {
    "cmd": "npm run start"
  }
}
