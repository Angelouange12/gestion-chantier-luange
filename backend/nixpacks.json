{
  "phases": {
    "setup": {
      "nixPkgs": ["nodejs_18"]
    },
    "install": {
      "cmds": [
        "if [ -f package-lock.json ]; then npm ci --omit=dev; else npm install --omit=dev; fi"
      ]
    },
    "build": {
      "cmds": [
        "echo 'Backend build complete'"
      ]
    }
  },
  "start": {
    "cmd": "npm run railway:deploy"
  }
}
